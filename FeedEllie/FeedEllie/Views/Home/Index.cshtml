<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Feed Ellie</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Feed", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input name="FeedName" type="text" class="form-control" placeholder="Who are you?"/>
                </div>
                <div class="form-group col-md-12">
                    <h6>Date</h6>
                    <input name="FeedDate" type="date" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <h6>Time</h6>
                    <input name="FeedTime" type="time" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <input name="Food" type="text" class="form-control" placeholder="What are we having?"/>
                </div>
                <button type="submit" class="btn btn-block btn-primary">FEED ME!</button>
            </div>
            }
        </div>
    </div>
</div>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Nap Time!</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Nap", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input name="NapName" type="text" class="form-control" placeholder="Who are you?" />
                </div>
                <div class="form-group col-md-12">
                    <h6>Date</h6>
                    <input name="NapDate" type="date" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <h6>Nap Start Time</h6>
                    <input name="StartTime" type="time" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <h6>Nap End Time</h6>
                    <input name="EndTime" type="time" class="form-control" />
                </div>
                <button type="submit" class="btn btn-block btn-primary">NAP TIME!</button>
            </div>
            }
        </div>
    </div>
</div>